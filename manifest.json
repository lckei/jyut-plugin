{
    "name": "划词粤音",
    "version": "0.1.3",
    "description": "网页划词显示粤语拼音",
    "manifest_version": 2,

    "browser_action": {
        "default_title": "划词粤音",
        "default_icon": "image/128logo.png"
    },
    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "icons": {
        "16": "image/16logo.png",
        "32": "image/32logo.png",
        "42": "image/42logo.png",
        "48": "image/48logo.png",
        "128": "image/128logo.png"
    },
    "web_accessible_resources": ["image/32logo.png"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/jydict.js", "js/content.js"],
        "css": ["css/ax.css", "css/ax-iconfont.css"],
        "all_frames": true
    }]
}
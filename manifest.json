{
    "name": "划词粤音",
    "version": "0.1.3",
    "description": "网页划词显示粤语拼音",
    "manifest_version": 2,

    "browser_action": {
        "default_title": "划词粤音",
        "default_icon": "image/42logo.png"
    },

    "icons": {
        "16": "image/16logo.png",
        "32": "image/32logo.png",
        "42": "image/42logo.png",
        "48": "image/48logo.png",
        "128": "image/128logo.png"
    },
    "web_accessible_resources": ["btn.png", "css/custom.css"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/jydict.js", "js/content.js"],
        "all_frames": true,
        "run_at": "document_end"
    }]
}